<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Home">

    <EditText
        android:id="@+id/unitSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Unit"
        android:inputType="numberDecimal"
        android:text="186"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/reduceAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="reduceAmount"
        android:inputType="numberDecimal"
        android:text="15"
        app:layout_constraintEnd_toEndOf="@+id/unitSize"
        app:layout_constraintStart_toStartOf="@+id/unitSize"
        app:layout_constraintTop_toBottomOf="@+id/unitSize" />

    <EditText
        android:id="@+id/mainY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="mainY"
        android:inputType="numberDecimal"
        android:text="300"
        app:layout_constraintEnd_toEndOf="@+id/reduceAmount"
        app:layout_constraintStart_toStartOf="@+id/reduceAmount"
        app:layout_constraintTop_toBottomOf="@+id/reduceAmount" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="cursive"
        android:text="klotski"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/colorAccent"
        android:text="Game"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/mainX"
        app:layout_constraintStart_toStartOf="@+id/mainX"
        app:layout_constraintTop_toBottomOf="@+id/mainX" />

    <EditText
        android:id="@+id/mainX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="MainX"
        android:inputType="numberDecimal"
        android:text="250"
        app:layout_constraintEnd_toEndOf="@+id/mainY"
        app:layout_constraintStart_toStartOf="@+id/mainY"
        app:layout_constraintTop_toBottomOf="@+id/mainY" />
</androidx.constraintlayout.widget.ConstraintLayout>